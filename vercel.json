{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH"
      ]
    }
  ],
  "headers": [
    {
      "source": "/socket.io/(.*)",
      "headers": [
        { 
          "key": "Access-Control-Allow-Origin", 
          "value": "https://www.splendor.uno" 
        },
        { 
          "key": "Access-Control-Allow-Methods", 
          "value": "GET,POST,OPTIONS" 
        },
        { 
          "key": "Access-Control-Allow-Headers", 
          "value": "Sec-WebSocket-Protocol,Authorization" 
        }
      ]
    }
  ]
}